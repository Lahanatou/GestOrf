<h2>Log in</h2>
<style>

.justifier {
text-align: center;
text-justify: inter-word;
}

.title {
text-align: center;
text-justify: inter-word;
}
</style>

<section>
  <div class="title"><h2><strong>Bienvenue à GestOrf</strong></h2>
    <h4>
      <div class="justifier"><h4>Veuillez vous connecter et profiter pleinement de notre application.</h4>

      </div>
  </h4>
  </div>

  <ul class="nav justify-content-end">
    <li class="nav-item">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.hidden_field :email ,value: "notreinvite@gmail.com" %>
          <%= f.hidden_field :password ,value: "invite123456" %>
        </div>
        <div class="actions">

            <%= f.submit "Cher(ère)s Invité(e)s!!! Connectez-vous", class: "btn btn-info" %>||||

        </div>
      <% end %>
    </li>

    <li class="nav-item">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.hidden_field :email ,value: "notreadmin@gmail.com" %>
          <%= f.hidden_field :password ,value: "bossadmin123456" %>
        </div>
        <div class="actions">

            <%= f.submit "Cher(ère)s Admin!!! Connectez-vous", class: "btn btn-info" %>

        </div>

    <% end %>
    </li>
      </ul>

  <h2>Insérez vos informations pour vous connecter</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'example@gmail.com' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "Actuel mot de passe", placeholder:"Écrivez votre mot de passe actuel" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Connecté(e)", class: "btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</section>
